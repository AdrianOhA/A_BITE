<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
 	<definition name="main" template="/WEB-INF/views/common/layout/Layout.jsp">
 		<put-attribute name="title" value="KEROL - Portal" />
        <put-attribute name="top" value="/WEB-INF/views/common/layout/top.jsp"/>         
        <put-attribute name="footer" value="/WEB-INF/views/common/layout/footer.jsp" />
    </definition>
    
    <definition name="/mob/*/*"  template="/WEB-INF/views/common/layout/mobileLayout.jsp">
    	<put-attribute name="top" value="/WEB-INF/views/common/layout/mobileTop.jsp"/>   
    	<put-attribute name="body" value="/WEB-INF/views/mob/{1}/{2}.jsp" />
    </definition>
    
    <definition name="/mbody/*/*"  template="/WEB-INF/views/common/layout/mobilewithoutLayout.jsp">
    	<put-attribute name="body" value="/WEB-INF/views/mob/{1}/{2}.jsp" />
    </definition>
    
   	<definition name="/biz/*/*/*" extends="main">      
      	<put-attribute name="body" value="/WEB-INF/views/biz/{1}/{2}/{3}.jsp" />
    </definition>
    
    <definition name="/body/*/*/*" template="/WEB-INF/views/common/layout/withoutLayout.jsp">
 		<put-attribute name="body" value="/WEB-INF/views/biz/{1}/{2}/{3}.jsp" />
 		<put-attribute name="footer" value="/WEB-INF/views/common/layout/footer.jsp" />
    </definition>
    
   	<definition name="/common/empty/*" extends="main">      
      	<put-attribute name="body" value="/WEB-INF/views/common/empty/{1}.jsp" />
    </definition>

 	<definition name="popup" template="/WEB-INF/views/common/layout/layout_popup.jsp">
 		<put-attribute name="title" value="KEROL - Portal" />
        <put-attribute name="top" value="/WEB-INF/views/common/layout/top_popup.jsp"/>         
    </definition>
   	<definition name="/common/*/*" extends="popup">      
      	<put-attribute name="body" value="/WEB-INF/views/common/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>